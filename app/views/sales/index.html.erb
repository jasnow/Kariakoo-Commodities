<h1>Listing sales</h1>

<table>
  <tr>
    <th>Farmer name</th>
    <th>Sale date</th>
    <th>Market type</th>
    <th>Location</th>
    <th>Volume</th>
    <th>Unit</th>
    <th>String</th>
    <th>Quality</th>
    <th>Commodity</th>
    <th>Price received</th>
    <th>Price receiptunit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sales.each do |sale| %>
  <tr>
    <td><%= sale.farmer_name %></td>
    <td><%= sale.sale_date %></td>
    <td><%= sale.market_type %></td>
    <td><%= sale.location %></td>
    <td><%= sale.volume %></td>
    <td><%= sale.unit %></td>
    <td><%= sale.string %></td>
    <td><%= sale.quality %></td>
    <td><%= sale.commodity %></td>
    <td><%= sale.price_received %></td>
    <td><%= sale.price_receiptUnit %></td>
    <td><%= link_to 'Show', sale %></td>
    <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
    <td><%= link_to 'Destroy', sale, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

